<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 圆角 -->
            <corners android:radius="5dp" />
            <!--填充颜色为白色-->
            <solid android:color="@color/semi_transparent_red" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/semi_transparent_red" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <!-- 圆角 -->
            <corners android:radius="5dp" />
            <!--填充颜色为白色-->
            <solid android:color="@color/semi_transparent_red" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/semi_transparent_red" />
        </shape>
    </item>

    <!--默认-->
    <item android:state_window_focused="false">
        <shape android:shape="rectangle">
            <!--圆角-->
            <corners android:radius="5dp" />
            <!--填充颜色为白色-->
            <solid android:color="@color/bt_red_color" />
            <!--描边-->
            <stroke android:width="1dp" android:color="@color/bt_red_color" />
        </shape>
    </item>
</selector>